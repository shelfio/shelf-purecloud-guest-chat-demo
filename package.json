{
  "name": "shelf-purecloud-guest-chat",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "i18next": "19.6.3",
    "lodash": "4.17.19",
    "node-sass": "4.14.1",
    "react": "16.13.1",
    "react-chat-widget": "2.1.5",
    "react-dom": "16.13.1",
    "react-i18next": "11.7.0",
    "react-redux": "7.2.1",
    "react-scripts": "3.4.1",
    "redux": "4.0.5",
    "redux-devtools-extension": "2.13.8",
    "redux-thunk": "2.3.0",
    "typescript": "3.9.7"
  },
  "scripts": {
    "start": "PORT=5000 react-scripts start",
    "build": "react-scripts build",
    "build-widget": "webpack --mode production --config ./webpack.config.js --env.production",
    "run-widget": "http-server ./",
    "test": "jest",
    "lint": "eslint ./src --fix --ext .js,.json,.ts,.tsx --quiet",
    "eject": "react-scripts eject",
    "coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,css,scss,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{json,js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": "@shelf/prettier-config",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/plugin-proposal-optional-chaining": "7.11.0",
    "@babel/plugin-transform-runtime": "7.11.0",
    "@babel/preset-env": "7.11.0",
    "@babel/preset-typescript": "7.10.4",
    "@shelf/eslint-config": "0.18.0",
    "@shelf/prettier-config": "0.0.7",
    "@testing-library/jest-dom": "5.11.2",
    "@testing-library/react": "10.4.8",
    "@testing-library/user-event": "12.1.0",
    "@types/jest": "26.0.8",
    "@types/node": "14.0.27",
    "@types/react": "16.9.44",
    "@types/react-dom": "16.9.8",
    "cssimportant-loader": "0.4.0",
    "eslint": "7.6.0",
    "mini-css-extract-plugin": "0.9.0",
    "postcss-increase-specificity": "0.6.0",
    "prettier": "2.0.5",
    "webpack-cli": "3.3.12"
  }
}
